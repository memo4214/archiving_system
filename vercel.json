{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "frontend/templates/**",
          "frontend/static/**"
        ]
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/$", "dest": "/api/app.py" },
    { "src": "^/(.*)$", "dest": "/api/app.py" }
  ]
}